@model EntityLayer.Concrete.Product

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Ürün Ekleme</h4>
                <br />
                @Html.HiddenFor(x => x.Id, new { @class = "form-control" })
                <div class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">Ürün Adı</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Ürün Açıklama</label>
                        @Html.TextAreaFor(x => x.Description, 10, 3, new { @class = "form-control" })
                    </div>
                    @*<div class="form-group">
                            <label for="exampleInputEmail3">Ürün Fiyatı</label>
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                        </div>*@
                    <div class="form-group">
                        <label>Fiyat</label>
                        <input type="text" id="Price" name="Price" class="form-control" required />

                    </div>
                    <div class="form-group">
                        <label>Ekleme Tarihi</label>
                        <input type="date" name="Tarih" id="ekleme_tarihi" class="date" value="Tarih" required />

                    </div>
                    <div class="form-group">
                        <label>Stok</label>
                        <input type="text" id="stock" name="Stock" class="form-control" required />

                    </div>

                    <div class="form-group">
                        <label>Ürün Resmi</label>
                        <input type="file" name="Image" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Ürün AltKategorisi</label>
                        @Html.DropDownListFor(x => x.SubCategoryId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })

                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <button class="btn btn-danger">İptal</button>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>

