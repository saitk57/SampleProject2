@model EntityLayer.Concrete.Product


@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                @*@Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "btn btn-danger" })*@

                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" class="form-control" name="Name" value="@Model.Name" />


                </div>
                <br />
                <div class="form-group">
                    <label>Açıklama</label>
                    <input type="text" class="form-control" name="Description" value="@Model.Description" />

                </div>
                <br />
                <div class="form-group">
                    <label>Önceki Resim</label>
                    <img src="~/ProductImageFiles/@Model.Image" width="70" height="70" />

                </div>
                <br />
                <div class="form-group">
                    <label>Ürün Resmi</label>
                    <input type="file" name="Image" />
                </div>


                <br />
                @*<div class="form-group">
                        <label>Fiyat</label>
                        <input type="text" class="form-control" name="Price" value="@Model.Price" />

                    </div>*@
                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" id="Price" name="Price" value="@Model.Price" class="form-control" required />

                </div>
                <div class="form-group">
                    <label>Ekleme Tarihi</label>
                    <input type="text" name="Tarih" id="ekleme_tarihi" class="date" value="@Model.Tarih.ToString("dd.MM.yyyy")" required />

                </div>
                <div class="form-group">
                    <label>Stok</label>
                    <input type="text" id="Price" name="Stock" class="form-control" value="@Model.Stock" required />

                </div>
                <br />

                <br />

                <br />

                <br />
                <div class="form-group">
                    <label>Alt Kategori</label>
                    @Html.DropDownListFor(x => x.SubCategoryId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })

                </div>
                <br />

                <button class="btn btn-primary" type="submit">Güncelle</button>
                @*<a href="/AdminProduct/Index" class="btn btn-primary">Ürün Listesine Dön</a>*@
            </form>

        </div>

    </div>

</div>


