@model EntityLayer.Concrete.SubCategory


@{
    ViewData["Title"] = "UpdateSubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateSubCategory", "SubCategory", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)

    <b>Alt Kategori Adı</b>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <b>Kategori Adı</b>
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })

    <b>Durum</b>
    @Html.TextBoxFor(x => x.Durum, new { @class = "form-control" })
    <br />
    <button class="btn btn-info" style="background-color:#ff6a00">Alt Kategori Güncelle</button>


}

